<nav class="navbar navbar-dark bg-dark mb-4">
        <span class="navbar-brand h1">HomeBase</span>
        <div class="justify-content-left d-flex">
              <button class="navbar-item btn mx-2 btn-outline-secondary" id="logout">Logout</button>
              <form class="form-inline">
                  <input class="form-control mr-sm-2" type="search" placeholders="Base ID" aria-label="BaseID">
                  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Find Base</button>
              </form>
        </div>
</nav>
<div class="col-12 d-flex flex-row  m-auto p-auto">
    <section class="col-4 border-right border-dark">
        <h4 class="text-center">My Bases</h4>

        {{#each groups as |group|}}
        <a href="/dashboard/{{group.id}}"><button class="btn btn-info btn-block">{{group.address}}</button></a>
        {{/each}}
        {{#each myGroup as |sgroup|}}
        <a href="/dashboard/{{sgroup.id}}"><button class="btn btn-info btn-block">{{sgroup.address}}</button></a>
        {{/each}}

        <form id="group-signup" class="py-5">
            <h4 class=" text-center">
                Create Base
            </h4>
            <div class="form-group">
                <input type="text" class="form-control" id="baseName" placeholder="Base Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="address" placeholder="Address">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="address-city" placeholder="City">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="address-state" placeholder="State">
            </div>
            <button type="submit" class="btn btn-success btn-block">Submit</button>
        </form>
    </section>
    <section class="col-8">
        <div class="border-bottom border-dark">
            <h2 class="text-center">Upcoming Bills</h2>
            <ul class="list-group" id="upcoming-bills">
                <li class="list-group-item">Sample Bill</li>
                <li class="list-group-item">Sample Bill</li>
            </ul>
        </div>
        <div>
            <h2 class="text-center">Paid Bills</h2>
            <ul class="list-group" id="paid-bills">
                <li class="list-group-item">Paid Bill</li>
                <li class="list-group-item">Paid Bill</li>
            </ul>
        </div>
    </section>
    <script src="/javascript/logout.js"></script>
    <script src="/javascript/creategroup.js"></script>
</div> 