<nav class="navbar navbar-dark bg-dark">
  <span class="navbar-brand mb-0 h1">HomeBase</span>
  <div class="justify-content-left d-flex">
    <a class="nav-link" href="/homepage">Homepage</a>
    <button class="navbar-item btn mx-2 btn-outline-secondary" id="logout">Logout</button>
  </div>
</nav>
<main class="container">
  <section class="row my-4">
    <h3 class="col-md group-text">Base Name: <span class="group-info">{{groups.group_name}}</span></h3>
    <h3 class="col-md group-text">Address: <span class="group-info">{{groups.address}}</span></h3>
    <h3 class="col-md group-text">Base Id: <span class="group-info">{{groups.id}}</span></h3>
    {{!-- <button type="button" class="btn btn-info btn-block" id="delete-btn">Delete Base</button> --}}
  </section>
  <section class="row">
    <!-- Grocery container begins !-->
    <div class="col-md">
      <form id="grocery-form">
        <h3 class="text-center"><i class="fa-sharp fa-solid fa-basket-shopping"></i> Groceries</h3>
        <div class="form-group">
          <input type="text" class="form-control" id="grocery-name" placeholder="Grocery Name" />
        </div>
        <button type="submit" id="add-grocery" class="btn btn-success btn-block">
          Add
        </button>
      </form>

      <div class="list-container mt-2">
        <h6 id="grocery-heading">This week we need...</h6>
        <div class="card">
          <ul class="list-group" id="saved-groceries">
            {{#each groceries as |grocery|}}
            <li class="list-group-item">{{grocery_name}}
              <button class="btn btn-danger btn-delete-grocery" id={{id}} type="button">Delete</button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <!-- Bill container begins !-->
    <div class="content-area col-md">
      <h3 class="text-center"><i class="fa-sharp fa-solid fa-file-invoice-dollar"></i> Bills</h3>
      <form id="billForm" class="form-group">
        <input type="text" placeholder="Company Name" class="form-control" id="companyName">
        <input type="text" placeholder="Amount Due" class="form-control" id="amountDue">
        <input type="text" placeholder="Due Date mm/dd/yy" class="form-control" id="dueDate">
        <button class="btn btn-success btn-block" type="submit" id="submitBill">Add</button>
      </form>

      <div class="list-container mt-2">
        <div class="card">
          {{#each bills as |bill|}}
          <ul class="list-group" id="billList">
            <li data-id="{{id}}" id="billItem" class="list-group-item">{{company}} ${{amount_due}} {{format_date due_date}}
              <button class="btn btn-danger btn-delete-bill" id={{id}} type="button">Delete</button>
            </li>
          </ul>
          {{/each}}
        </div>
      </div>
    </div>
    {{!-- Chores secondary begins --}}
    <div class="col-md">
      <form id="chore-form">
        <h3 class="text-center"><i class="fa-sharp fa-solid fa-broom"></i> Chores</h3>
        <div class="form-group">
          <input type="text" class="form-control" id="chore-name" placeholder="Chore Name" />
        </div>
        <button type="submit" id="add-chore" class="btn btn-success btn-block">
          Add
        </button>
      </form>

      <div class="list-container mt-2">
        <h6 id="chore-heading">Chores to do...</h6>
        <div class="card">
          <ul class="list-group" id="saved-chores">
            {{#each chores as |chore|}}
            <li class="list-group-item">{{chore_name}}
              <button class="btn btn-danger btn-delete-chore" id={{id}} type="button">Delete</button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </section>
    <!-- Chores container begins !-->
    <section class="row">
      <div class="col-lg">
        <i id="deleteBill" class="delete-icon glyphicon glyphicon-trash"></i>
        <h3 class="text-center"><i class="fa-solid fa-broom"></i>Chores</h3>
        <button type="button" id="spin_button" class="btn btn-success btn-block" onclick="theWheel.startAnimation();">
          Spin
        </button>
        <div id="canvasContainer">
          <canvas id="canvas" width="400" height="400"> Your browser does not support the canvas tag. </canvas>
        </div>
        {{!-- This is where JS whinwheel used to be --}}
        <script src="/javascript/winwheel.js"></script>
        <script src="/javascript/spinny.js"></script>
      </div>
  </section>
</main>

<script src="/javascript/chore.js"></script>
<script src="/javascript/grocery.js"></script>
<script src="/javascript/bill.js"></script>
<script src="/javascript/logout.js"></script>